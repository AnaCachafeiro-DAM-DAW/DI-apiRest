<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apiRestEscaladores.MainPage">

    <VerticalStackLayout Padding="20">
        <Label Text="Lista de Escaladores"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Lista de escaladores -->
        <ListView ItemsSource="{Binding Escaladores}"
                  SelectedItem="{Binding EscaladorSeleccionado, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding Name}" FontSize="18" WidthRequest="150"/>
                            <Label Text="{Binding Age}" FontSize="18" WidthRequest="50"/>
                            <Label Text="{Binding Id}" FontSize="18" WidthRequest="50"/>
                            <Label Text="{Binding MountainGroup}" FontSize="18" WidthRequest="150"/>
                            <Label Text="{Binding Federado}" FontSize="18" WidthRequest="50"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Sección de edición -->
        <Frame Padding="10" HasShadow="True" CornerRadius="10" IsVisible="{Binding EscaladorSeleccionado, Converter={StaticResource NullToBoolConverter}}">
            <Label Text="Detalles del Escalador" FontSize="20" FontAttributes="Bold"/>
            <Grid ColumnDefinitions="*,2*" RowSpacing="5">
                <Label Text="Nombre:" Grid.Row="0" Grid.Column="0"/>
                <Entry Text="{Binding EscaladorSeleccionado.Name}" Grid.Row="0" Grid.Column="1"/>

                <Label Text="Edad:" Grid.Row="1" Grid.Column="0"/>
                <Entry Text="{Binding EscaladorSeleccionado.Age}" Grid.Row="1" Grid.Column="1" Keyboard="Numeric"/>

                <Label Text="Grupo Montañero:" Grid.Row="2" Grid.Column="0"/>
                <Entry Text="{Binding EscaladorSeleccionado.MountainGroup}" Grid.Row="2" Grid.Column="1"/>

                <Label Text="Experiencia (años):" Grid.Row="3" Grid.Column="0"/>
                <Entry Text="{Binding EscaladorSeleccionado.Experience}" Grid.Row="3" Grid.Column="1" Keyboard="Numeric"/>

                <Label Text="Federado:" Grid.Row="4" Grid.Column="0"/>
                <Switch IsToggled="{Binding EscaladorSeleccionado.Federado}" Grid.Row="4" Grid.Column="1"/>
            </Grid>

            <Button Text="Actualizar" 
                    Command="{Binding EditarEscaladorCommand}" 
                    BackgroundColor="LightYellow"/>
        </Frame>

        <!-- Botones CRUD -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
            <Button Text="Cargar Escaladores"
                    Command="{Binding CargarEscaladoresCommand}"
                    BackgroundColor="LightBlue"/>
            <Button Text="Agregar Nuevo"
                    Command="{Binding AgregarEscaladorCommand}"
                    BackgroundColor="LightGreen"/>
            <Button Text="Eliminar"
                    Command="{Binding EliminarEscaladorCommand}"
                    BackgroundColor="LightCoral"/>
            <Button Text="Resetear"
                    Command="{Binding ResetearVistaCommand}"
                    BackgroundColor="Gray"/>
        </StackLayout>
    </VerticalStackLayout>

</ContentPage>
